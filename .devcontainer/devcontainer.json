{
  "name": "Ubuntu + Python 3.12 (Compose)",
  "dockerComposeFile": "docker-compose.yaml",
  "service": "devcontainer",
  "workspaceFolder": "/langgraph-tutorial",
  "remoteUser": "vscode",
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "username": "vscode",
      "configureZshAsDefaultShell": true
    },
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.12",
      "installTools": true
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "charliermarsh.ruff",
        "ms-python.python",
        "ms-python.vscode-pylance"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/langgraph-tutorial/.venv/bin/python",
        "python.analysis.autoImportCompletions": true,
        "editor.formatOnSave": true,
        "[python]": {
          "editor.defaultFormatter": "charliermarsh.ruff"
        }
      }
    }
  },
  "postCreateCommand": "git config --global --add safe.directory /langgraph-tutorial && python -m venv .venv && . .venv/bin/activate && pip install -r requirements.txt",
  "forwardPorts": [
    3000,
    8000
  ],
  "shutdownAction": "stopCompose"
}